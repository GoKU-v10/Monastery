{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "^/static/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/static/$1"
    },
    {
      "src": "^/assets/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/assets/$1"
    },
    {
      "src": "^/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "^/manifest.json",
      "dest": "/manifest.json"
    },
    {
      "src": "^/robots.txt",
      "dest": "/robots.txt"
    },
    {
      "src": "/audio-wisdom-library",
      "dest": "/index.html"
    },
    {
      "src": "/ai-manuscript-portal",
      "dest": "/index.html"
    },
    {
      "src": "/heritage-community",
      "dest": "/index.html"
    },
    {
      "src": "/virtual-pilgrimage-center",
      "dest": "/index.html"
    },
    {
      "src": "/homepage",
      "dest": "/index.html"
    },
    {
      "src": "/environmental-stewardship",
      "dest": "/index.html"
    },
    {
      "src": "^/(?<path>.*)",
      "dest": "/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
